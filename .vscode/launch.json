    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_DEBUG": "1",
                "USERNAME": "user",
                "PASSWORD": "test"
            },
            "args": [
                "run",
                "--debugger",
                "--host",
                "0.0.0.0"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Programme downloader (force cache)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/zpf_programme_downloader.py",
            "args": [
                "--force-cache",
                "--stage-filter",
                "AMIGO"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Programme downloader",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/zpf_programme_downloader.py",
            "args": [
                "--stage-filter",
                "AMIGO"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}